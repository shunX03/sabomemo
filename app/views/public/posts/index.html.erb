<% if @post.errors.any? %>
  <%= @post.errors.count %> errors have occurred
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
    
    <div class='col-md-8 offset-md-1'>
      <h2>みんなのとうこう</h2>
      <%= render 'index', posts: @posts %>
  </div>
</div>