<%= form_with model:post,url: public_posts_path, local:true do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control post_title' %>
  </div>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control post_body' %>
  </div>

  <div class="form-group">
    <%= f.label :waste %>
    <%= f.number_field :waste, step: '0.1', class:'input_form' %>
  </div>

  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
  <% end %>