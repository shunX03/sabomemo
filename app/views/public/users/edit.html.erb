<% if @user.errors.any? %>
  <%= @user.errors.count %> errors have occurred
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<main>
  <div class="container">
   <div class="row">
     <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
       <h2>User Info</h2>
         <%= form_with model: @puser do |f| %>
           <div class="form-group">
            <label for="inputName">Name</label>
             <p><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"name"%></p>
               </div>
               <div class="form-group">
               <label for="inputImage">ProfileImage</label>
             <%= f.file_field :profile_image, placeholder: "PlofileImage", accept: "image/*" %>
              </div>
             <div class="form-group">
            <label for="inputName">Introduction</label>
           <p><%= f.text_area:introduction, autofocus: true, id:"inputName", placeholder:"introduction"%></p>
          </div>
          <%= f.submit "Update User", class:"btn btn-secondary" %>
         <% end %>
        </div>
       </div>
      </div>
     </main>