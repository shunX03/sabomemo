<div class='container'>
 <div class='row'>
  <div class='col-md-6 offset-md-3'>
    <div class="text-center">
      <h1>ろぐいん</h1>
    </div>
   <div class='card mt-3'>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
     <div class="field col-md-8 ml-5 mt-3 mb-1">
      <%= f.label :name,'なまえ', class:'h5 text-black' %>
      <%= f.text_field :name, autofocus: true, class: 'form-control' %>
     </div>
      <div class="field col-md-8 ml-5">
       <%= f.label :password,"ぱすわーど",class: "h5 text-black" %>
       <%= f.password_field :password, autocomplete: "current-password" ,class: 'form-control' %>
      </div>
       <% if devise_mapping.rememberable? %>
        <div class="field ml-5">
          <%= f.check_box :remember_me %>
          <%= f.label :ぱすわーどをきろくする %>
        </div>
       <% end %>
        <div class="actions mb-3 text-center">
         <%= f.submit "ろぐいんする", class: "btn btn-outline-dark" %>
        </div>
    <% end %>
   </div>
  </div>
 </div>
</div>

